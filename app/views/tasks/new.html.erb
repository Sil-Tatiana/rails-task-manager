<%= form_with model: @task do |f| %>
<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :details %>
  <%= f.text_field :details %>
</p>
<p><%= f.label :completed, "Have you completed it?" %>
   <%= f.check_box :completed %>
</p>
  <%= f.submit %>
<% end %>

